{
  "name": "fastly",
  "displayName": "Fastly Compute@Edge",
  "description": "Work with Compute@Edge projects within Visual Studio Code",
  "version": "0.0.1",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/fastly/fastly-vscode.git"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#471438",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebug",
    "workspaceContains:fastly.toml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fastly.compute.build",
        "title": "Build Compute@Edge Package"
      },
      {
        "command": "fastly.compute.serve",
        "title": "Start Compute@Edge Development Server"
      }
    ],
    "configuration": {
      "title": "Fastly",
      "properties": {
        "fastly.cli": {
          "type": "string",
          "default": "fastly",
          "description": "Location of the Fastly CLI binary."
        }
      }
    },
    "debuggers": [
      {
        "type": "fastly",
        "label": "C@E Local Testing Server",
        "program": "/Users/kailan/src/fastly/Viceroy/target/debug/viceroy",
        "args": [
          "--debug-adapter",
          "/Users/kailan/src/fastly/weather_release/bin/main.wasm"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "project"
            ],
            "properties": {
              "project": {
                "type": "string",
                "description": "Absolute path to the project directory.",
                "default": "${workspaceFolder}/"
              },
              "port": {
                "type": "number",
                "description": "Port to listen on.",
                "default": 7878
              },
              "runBuild": {
                "type": "boolean",
                "description": "Run a build before starting the server.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "fastly",
            "request": "launch",
            "name": "C@E local testing",
            "project": "${workspaceFolder}/",
            "port": 7878,
            "runBuild": true
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "command-exists": "^1.2.9"
  }
}
